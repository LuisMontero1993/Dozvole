<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Appgeneral" parent="@style/TextAppearance.AppCompat">
        <item name="android:background">@drawable/fondo</item>
        <item name="android:textColor">@color/font_color</item>

    </style>

    <style name="Editlogin" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">316dp</item>
        <item name="android:textColorHint">@color/font_color</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="fragment_permisos" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/seccion</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="Lateral" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/colorpanellateral</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/font_color</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="texttoolbar_fragment" parent="@style/TextAppearance.AppCompat">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/font_color</item>
        <item name="android:paddingLeft">@dimen/txt_toolbar</item>
        <item name="android:drawablePadding">5dp</item>

    </style>
    <style name="opcion_permisos" parent="@style/TextAppearance.AppCompat">
    <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:background">@drawable/seccion</item>
        <item name=" android:elevation">5dp</item>
        <item name="android:textColor">@color/font_color</item>

    </style>
    <style name="Texview_permisos" parent="@style/TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/opcion_permisos</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/seccion</item>
        <item name="android:textColor">@color/font_color</item>


    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
